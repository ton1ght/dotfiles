format-padding = 1
label = %title%
label-maxlen = 50

[module/title]
type = internal/xwindow
format = <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 4
label = %title%
label-maxlen= 50

[module/bspwm]

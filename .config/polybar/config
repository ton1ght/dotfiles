[module/wlan]
type = internal/network
interface = wlp61s0
interval = 3.0

format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
format-connected-background = ${xrdb:active}

format-disconnected =

ramp-signal-0 = 
ramp-signal-foreground = ${xrdb:foreground}


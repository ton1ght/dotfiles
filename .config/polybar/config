[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 25
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${xrdb:background}
foreground = ${xrdb:foreground}

line-size = 2
label-line-color = #f00

border-size = 4
border-color = #00000000

border-top-size = 0
border-bottom-size = 0
border-right-size = 0
border-left-size = 0

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Arimo Nerd Font:size=11;1
font-1 = FontAwesome:style=Regular:size=8;1

modules-left = i3 xwindow 
modules-center = date
modules-right =  spotify updates-arch-combined cpu memory filesystem pulseaudio battery

tray-position = right
tray-padding = 1
tray-background = ${xrdb:background}

[module/xwindow]
type = internal/xwindow
format = <label>
format-background = ${xrdb:background}
format-foreground = ${xrdb:foreground}
format-padding = 2
label = %title%
label-maxlen = 100
label-empty-foreground = #707880


{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", ".git/", ".hg/"],
      "initializationOptions": {
		 "compilationDatabaseDirectory" : "build-debugoptimized",
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "python.jediEnabled": false,
  "python.setInterpreter": "/usr/bin/python"
}
